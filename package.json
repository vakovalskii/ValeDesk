{
	"name": "localdesk",
	"private": true,
	"version": "0.0.6",
	"description": "LocalDesk - Desktop AI Assistant with Local Model Support - OpenAI SDK compatible agent with memory system, file operations, web search, and modern UI",
	"author": "Valerii Kovalskii <v.kovalskii@example.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/vakovalskii/LocalDesk.git"
	},
	"keywords": [
		"ai-assistant",
		"local-llm",
		"openai-sdk",
		"electron",
		"desktop-app",
		"vllm",
		"qwen",
		"llama",
		"ollama",
		"ai-agent",
		"function-calling",
		"memory-system",
		"file-operations",
		"web-search",
		"code-assistant",
		"typescript",
		"react"
	],
	"type": "module",
	"main": "dist-electron/main.js",
	"scripts": {
		"dev:clean": "pkill -f \"[v]ite\\\\b\" 2>/dev/null || true; pkill -f \"[e]lectron\\\\s+\\\\.\" 2>/dev/null || true",
		"dev": "npm run dev:clean && concurrently -k -n react,electron -c cyan,magenta \"npm run dev:react\" \"npm run dev:electron\"",
		"dev:react": "vite --host 0.0.0.0 --port 5173 --strictPort",
		"dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron . --no-sandbox",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"preview": "vite preview",
		"postinstall": "electron-rebuild -f -w better-sqlite3 || true",
		"generate-build-info": "node scripts/generate-build-info.js",
		"transpile:electron": "npm run generate-build-info && tsc --project src/electron/tsconfig.json && npm run copy:prompts && npm run copy:build-info",
		"copy:prompts": "node -e \"const fs=require('fs');const path=require('path');fs.mkdirSync('dist-electron/libs/prompts',{recursive:true});fs.readdirSync('src/electron/libs/prompts').filter(f=>f.endsWith('.txt')).forEach(f=>fs.copyFileSync(path.join('src/electron/libs/prompts',f),path.join('dist-electron/libs/prompts',f)))\"",
		"copy:build-info": "node -e \"const fs=require('fs');fs.copyFileSync('src/electron/build-info.json','dist-electron/build-info.json')\"",
		"dist:mac": "npm run transpile:electron && npm run build && electron-builder --mac --arm64",
		"dist:win": "npm run transpile:electron && npm run build && electron-builder --win --x64",
		"dist:linux": "npm run transpile:electron && npm run build && electron-builder --linux --x64",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"@anthropic-ai/claude-agent-sdk": "^0.2.6",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-tooltip": "^1.2.8",
		"@tailwindcss/vite": "^4.1.18",
		"@tavily/core": "^0.7.1",
		"better-sqlite3": "^12.6.2",
		"dotenv": "^17.2.3",
		"highlight.js": "^11.11.1",
		"mammoth": "^1.11.0",
		"mermaid": "^11.12.2",
		"node-fetch": "^3.3.2",
		"openai": "^6.16.0",
		"os-utils": "^0.0.14",
		"pdf-parse": "^1.1.1",
		"quickjs-emscripten": "^0.31.0",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"react-markdown": "^10.1.0",
		"rehype-highlight": "^7.0.2",
		"rehype-raw": "^7.0.0",
		"remark-gfm": "^4.0.1",
		"tailwindcss": "^4.1.18",
		"type-check": "^0.4.0",
		"vite-tsconfig-paths": "^6.0.3",
		"vm2": "^3.10.1",
		"zustand": "^5.0.10",
		"playwright": "^1.57.0"
	},
	"devDependencies": {
		"@electron/rebuild": "^3.7.2",
		"@eslint/js": "^9.39.2",
		"@types/better-sqlite3": "^7.6.13",
		"@types/glob": "^8.1.0",
		"@types/node-fetch": "^2.6.13",
		"@types/os-utils": "^0.0.4",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.2",
		"concurrently": "^9.2.0",
		"cross-env": "^10.1.0",
		"electron": "^39.2.7",
		"electron-builder": "^26.4.0",
		"eslint": "^9.39.2",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.26",
		"globals": "^17.0.0",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.52.0",
		"vite": "^7.3.1"
	}
}
