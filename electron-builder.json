{
    "appId": "com.vakovalskii.valera",
    "productName": "ValeDesk",
    "files": [
        "dist-electron",
        "dist-react"
    ],
    "extraResources": [
        "dist-electron/preload.cjs"
    ],
    "asarUnpack": [
        "node_modules/@anthropic-ai/claude-agent-sdk/**/*",
        "node_modules/pdf-parse/**/*",
        "node_modules/mammoth/**/*",
        "node_modules/quickjs-emscripten/**/*"
    ],
    "icon": "./claude-color.png",
    "mac": {
        "target": "dmg"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    },
    "win": {
        "target": [
            "portable",
            "msi"
        ],
        "signAndEditExecutable": false,
        "forceCodeSigning": false
    }
}
