{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ValeDesk",
  "version": "0.0.8",
  "identifier": "com.vakovalskii.valera",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist-react"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ValeDesk",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "../build/entitlements.mac.plist",
      "infoPlist": "Info.plist"
    },
    "externalBin": [
      "bin/valera-sidecar"
    ],
    "resources": {
      "../dist-sidecar/agent/libs/prompts": "prompts"
    }
  }
}